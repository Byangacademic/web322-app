<div class="row">
  <div class="col-md-12">
    <h2>Categories</h2>
    <hr />
    <table class="table">
      <thead>
        <td>Category ID</td>
        <td>Category Name</td>
      </thead>
      <tbody>
        {{#each categories}}
          <tr>
            <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
            <td><a href="/items?category={{this.id}}">{{this.category}}</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{#unless categories}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>